html, body
  margin 0
  padding 0
  width 100%
  height auto
  min-height 100%
body
  font-family $fontFamily
  font-size 1em
  line-height 1.2
  position relative
  min-height 300px
  min-width 980px
.upper
  text-transform uppercase
.link-on-dark
  color $onDarkTextColor
  text-decoration underline
  &:hover
    color $accentColor