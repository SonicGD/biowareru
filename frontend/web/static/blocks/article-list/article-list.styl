.article-list__item
  padding 35px 285px 35px 30px
  background-color $newsColorLight
.article-list__header
  display flex
  margin-bottom 20px
.article-list__title
  font-weight bold
  font-size 1.5em
  line-height 1.4
  margin 0 0 20px
.article-list__permalink
  color inherit
  text-decoration underline
  &:hover
    color darken($accentColor, 45%)
.article-list__date
  font-size .9em
  font-style italic
  color $newsColorDate
.article-list__title-image
  min-width 150px
  margin-left 30px

