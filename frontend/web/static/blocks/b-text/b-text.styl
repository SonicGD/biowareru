.b-text
  p
    margin 1em 0
    font-size 1em
    line-height 1.2
  a
    color $linkColor
    text-decoration underline
    &:hover
      color $linkColorHover
    &:visited
      color desaturate($linkColor, 50%)
  i
    font-style italic
  b
    font-weight bold
  h2, h3
    font-weight bold
    line-height 1.4
  h2
    font-size 1.5em
  h3
    font-size 1.2em