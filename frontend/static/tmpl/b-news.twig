<article class="article-list__item">
    <header class="article-list__header">
        <div>
            <h2 class="article-list__title">
                {% if full==true %}
                    {% if item.sticky %}
                        Важно!
                    {% endif %} {{ item.title }}
                {% else %}
                    <a class="article-list__permalink" href="{{ item.publicUrl }}">
                        {% if item.sticky %}
                            Важно!
                        {% endif %} {{ item.title }}
                    </a>
                {% endif %}

            </h2>
            <time class="article-list__date"
                  datetime="">{{ item.last_change_date|date("d.m.Y H:i:s") }}</time>
        </div>
        <a class="article-list__title-image" href="{{ item.parent.newsUrl }}"
           title="{{ item.parent.title }}">
            <img width="150" src="{{ item.parent.icon }}"
                 alt="{{ item.parent.title }}">
        </a>
    </header>
    <!--<img class="article-list__news-illustration"
         src="http://ic.pics.livejournal.com/jeff_kari/1668669/428515/428515_original.jpg">-->

    <div class="b-text">
        {{ item.short_text|raw }}
        {% if full==true %}
            {{ item.add_text|raw }}
        {% endif %}
    </div>


    <footer class="article-list__footer">
        {% if item.hasMore %}
            <a class="article-list__morelink" href="{{ item.publicUrl }}">Подробнее</a>
        {% endif %}

        <div class="article-list__footer-controls">

          <div class="article-list__share social-likes social-likes_notext" data-url="{{ item.publicUrl }}">
            <div class="facebook" title="Поделиться ссылкой на Фейсбуке"></div>
            <div class="twitter" title="Поделиться ссылкой в Твиттере"></div>
            <div class="vkontakte" title="Поделиться ссылкой во Вконтакте"></div>
            <div class="plusone" title="Поделиться ссылкой в Гугл-плюсе"></div>
          </div>
          <a class="article-list__comments" href="{{ item.forumUrl }}">{{ item.comments }}
            комментариев</a>
        </div>
    </footer>
</article>