{% extends "layout.twig" %}

{% block content %}
    <div class="article__block">
        {% include 'b-breadcrumbs.twig' %}
        <article class="article">
            <header class="article__header">
                <div>
                    <h2 class="article__title">{{ cat.title|raw }}</h2>
                </div>
                <a class="article-list__title-image" href="{{ parent.publicUrl }}"
                   title="{{ parent.title }}">
                    <img src="{{ parent.icon }}"
                         alt="{{ parent.title }}">
                </a>
            </header>
            {% if cat.content=='' %}
                {% for child in children %}
                    <div class="files__cat">
                        <ul class="files__list">
                            <li class="files__item">
                                <h2 class="files__title">
                                    <a class="files__link" href="{{ child.publicUrl }}">{{ child.title|raw }}</a>
                                </h2>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
                <ul class="files__list">
                    {% for article in articles %}
                        <li class="files__item">
                            <a class="files__link" href="{{ article.publicUrl }}">{{ article.title|raw }}</a>
                            <br>

                            <p>{{ article.announce|raw }}</p>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                {{ cat.content|raw }}
            {% endif %}

        </article>
        {% include 'b-pagination.twig' %}
    </div>

{% endblock %}
