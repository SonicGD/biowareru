{% extends "layout/layout.twig" %}

{% block content %}
    <div class="article-list">
        {% for item in news %}
            <article class="article-list__item">
                <header class="article-list__header">
                    <div class="article-list__title-wrap">
                        <h2 class="article-list__title">
                            <a class="article-list__permalink" href="{{ item.publicUrl }}">
                                {% if item.sticky %}
                                    Важно!
                                {% endif %} {{ item.title }}
                            </a>
                        </h2>
                        <time class="article-list__date"
                              datetime="">{{ item.last_change_date|date("d.m.Y H:i:s") }}</time>
                    </div>
                    <a class="article-list__title-image" href="#"
                       title="{{ item.parentTitle }}">
                        <img width="150" src="{{ item.parentIcon }}"
                             alt="{{ item.parentTitle }}">
                    </a>
                </header>
                <!--<img class="article-list__news-illustration"
                     src="http://ic.pics.livejournal.com/jeff_kari/1668669/428515/428515_original.jpg">-->

                <div class="b-text">
                    {{ item.short_text|raw }}
                </div>


                <footer class="article-list__footer">
                    {% if item.hasMore %}
                        <a class="article-list__morelink" href="{{ item.publicUrl }}">Подробнее</a>
                    {% endif %}

                    <div class="article-list__footer-controls">
                        <div class="article-list__share yashare-auto-init" data-yashareL10n="ru"
                             data-yashareQuickServices="vkontakte,facebook,twitter,gplus"
                             data-yashareTheme="counter"></div>
                        <a class="article-list__comments" href="#">{{ item.comments }} комментариев</a>
                    </div>
                </footer>
            </article>
        {% endfor %}

        <nav class="pagination">
            <!--<a class="pagination__item" href="#" rel="prev">← Предыдущая</a>-->
            <span class="pagination__item pagination__item_disabled">← Предыдущая</span>
            <span class="pagination__item pagination__item_active">1</span>
            <a class="pagination__item pagination__item_link" href="#">2</a>
            <a class="pagination__item pagination__item_link" href="#">3</a>
            <a class="pagination__item pagination__item_link" href="#">4</a>
            <a class="pagination__item pagination__item_link" href="#">5</a>
            <a class="pagination__item pagination__item_link" href="#">5</a>
            <a class="pagination__item pagination__item_link" href="#">5</a>
            <span class="pagination__item">...</span>
            <a class="pagination__item pagination__item_link" href="#" rel="next">Следующая →</a>
        </nav>
    </div>
{% endblock %}
