{% extends "layout.twig" %}

{% block content %}
    <div class="article__block">
        {% include 'b-breadcrumbs.twig' %}
        <article class="article">
            <header class="article__header">
                <div>
                    <h2 class="article__title">{{ parent.title }}</h2>
                </div>
                <a class="article-list__title-image" href="{{ parent.publicUrl }}"
                   title="{{ parent.title }}">
                    <img width="150" src="{{ parent.icon }}"
                         alt="{{ parent.title }}">
                </a>
            </header>

            <div class="files">
                {% for cat in cats %}
                    <div class="files__cat">
                        <ul class="files__list">
                            <li class="files__item">
                                <h2 class="files__title">
                                    <a class="files__link" href="{{ cat.publicUrl }}">{{ cat.title }}</a>
                                </h2>
                                <ul class="files__list">
                                    {% for file in cat.lastFiles %}
                                        <li class="files__item">
                                            <a class="files__link" href="{{ file.publicUrl }}">{{ file.title }}</a><br>
                                            {{ file.announce|raw }}
                                        </li>
                                    {% endfor %}
                                    {% for subCat in cat.children %}
                                        <li class="files__item">
                                            <h3 class="files__title">
                                                <a class="files__link"
                                                   href="{{ subCat.publicUrl }}">{{ subCat.title }}</a>
                                            </h3>
                                            <ul class="files__list">
                                                {% for file in subCat.lastFiles %}
                                                    <li class="files__item">
                                                        <a class="files__link"
                                                           href="{{ file.publicUrl }}">{{ file.title }}</a><br>
                                                        {{ file.announce }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </li>
                                    {% endfor %}

                                </ul>
                            </li>
                        </ul>
                    </div>
                {% endfor %}

            </div>

        </article>

    </div>
{% endblock %}
